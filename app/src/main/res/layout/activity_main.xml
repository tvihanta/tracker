<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:background="@color/background_material_dark"
    android:orientation="vertical">

    <org.osmdroid.views.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tilesource="Mapnik"
        android:layout_weight="1" />



    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:baselineAligned="false"
        android:background="@color/background_material_dark"
        android:stretchColumns="*"
        >
        <TableRow>
            <TextView
                android:layout_width="0px"
                android:layout_height="40dp"
                android:text="-- m"
                android:id="@+id/distance"
                android:autoText="false"
                android:editable="false"
                android:lines="1"
                android:textColor="#ffff8a00"
                android:textIsSelectable="false"
                android:textSize="@dimen/abc_text_size_title_material"
                android:textAlignment="inherit"
                android:gravity="left|center_vertical"
                android:layout_column="0"
                android:layout_span="1" />
            <TextView
                android:layout_width="0px"
                android:layout_height="40dp"
                android:text="-- m"
                android:id="@+id/speed"
                android:autoText="false"
                android:editable="false"
                android:lines="1"
                android:textColor="#ffff8a00"
                android:textIsSelectable="false"
                android:textSize="@dimen/abc_text_size_title_material"
                android:textAlignment="inherit"
                android:gravity="left|center_vertical"
                android:layout_column="1"
                android:layout_span="1" />

            <TextView
                android:layout_width="0px"
                android:layout_height="40dp"
                android:text="-- s"
                android:id="@+id/time"
                android:autoText="false"
                android:editable="false"
                android:lines="1"
                android:textColor="#ffff8a00"
                android:textIsSelectable="false"
                android:textSize="@dimen/abc_text_size_title_material"
                android:textAlignment="inherit"
                android:gravity="center_vertical|right"
                android:layout_column="2"
                android:layout_span="2" />
        </TableRow>
        <TableRow >
            <ImageButton
                android:id="@+id/action_center_client"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:text="test"
                android:src="@drawable/gpsarrow"
                android:layout_weight="1"
                android:onClick="centerClientClick"
                />

            <ImageButton
                android:id="@+id/action_center_tracker"
                android:layout_width="0px"
                android:layout_height="58dp"
                android:src="@drawable/ic_action_locate_off"
                android:text="Device"
                android:onClick="centerOnTracker"
                android:layout_weight="1"
               />

            <ImageButton
                android:id="@+id/action_zoom"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_search"
                android:onClick="zoomLevel"
                android:layout_weight="1" />
        </TableRow>


    </TableLayout>
</LinearLayout>
